{% comment %} How to use the product section {% endcomment %}

<!-- Assigning metafield values to Liquid variables for use in the template -->
{% assign instuctions = product.metafields.description.product_dosage.value %}
{% assign section_heading = product.metafields.description.dosage_heading.value %}
{% assign image = product.metafields.description.dosage_image.value %}

<!-- Main wrapper for the dosage information section -->
<div class="item__wrapper">
    <!-- Panel containing the content -->
    <div class="panal">
        <!-- Defines the width and layout of the product section -->
        <div class="page-width product-section section-feature-row" id="davkovani">
            <!-- Container for the image and text -->
            <div class="image-text__container">
                <!-- Left section for text content -->
                <div class="left">
                    <!-- Heading for the section, dynamically loaded from Liquid variable -->
                    <h2>{{ section_heading }}</h2>
                    <!-- Wrapper for text items -->
                    <div class="image-text__wrapper">
                        <!-- Loop through each item in the instructions array -->
                        {% for item in instuctions %}
                            <div class="item">
                                <!-- Conditionally display an icon if it is not blank -->
                                {% unless section.settings.icon == blank %}
                                    {{ section.settings.icon | image_url: width: 40 | image_tag }}
                                {% endunless %}
                                <!-- Wrapper for the text content -->
                                <div class="text-wrap">
                                    <!-- Heading for each item -->
                                    <h3>{{ item.heading }}</h3>
                                    <!-- Description for each item -->
                                    <p>{{ item.description }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <!-- Right section for image content -->
                <div class="right">
                    <!-- Conditionally display an image if it is not blank -->
                    {% unless image == blank %}
                        {{ image.src | image_url: width: 560 | image_tag }}
                    {% endunless %}
                </div>
            </div>
        </div>
    </div>
</div>


{% style %}
  #shopify-section-product_products-slider{
    padding-top: 0;
    padding-bottom: 0;
  }
  .right img{
    max-width: 100%;
  }
  .image-text__container h2{
    font-size: 32px;
    line-height: 42px;
    color: #222;
    font-weight: 400;
    margin-bottom: 40px;
  }

  .section-feature-row .right img{
    border-radius: 8px;
  }

  .section-feature-row .right{
    width: 50%;
    margin-bottom: auto;
  }
  .section-feature-row .left {
    width: 50%;
  }
  .image-text__container .section-label{
    font-size: 14px;
    line-height: 24px;
    letter-spacing: 1px;
    color: #8B9093;
    font-weight: 400;
    margin-bottom: 16px;
  }
  .image-text__wrapper img{
    max-width: 39px;
  }
  .image-text__wrapper .text-wrap p{
    font-size: 19px;
    color: #222;
    font-weight: 400;
    line-height: 32px;
  }

  .image-text__wrapper .text-wrap h3{
    font-size: 14px;
    color: #6C6E73;
    font-weight: 400;
    line-height: 27px;
  }
  .image-text__wrapper > .item{
    display: flex;
    align-items: flex-start;
  }
  .image-text__wrapper > .item img{
    margin-right: 25px;
  }
  .image-text__container > div{
    width: 50%;
  }
  .image-text__container{
    display: flex;
    align-items: center;
    padding: 68px 165px;
  }
  .image-text__container .left{
    margin-right: 70px;
    margin-bottom: auto;
  }
  .image-text__wrapper{
    display: flex;
    flex-direction: column;
    row-gap: 25px;
  }

  .image-text__wrapper .text-wrap{
    margin: 0;
  }
  @media (max-width: 1250px){
    .image-text__container{
      padding: 100px 80px;
    }
    .image-text__wrapper .text-wrap p {
      font-size: 16px;
      line-height: 30px;
    }
  }

    @media (max-width: 1000px) {
    .image-text__container{
      flex-direction: column;
    }
    .image-text__container .left{
      width: 100%;
      margin-right: 0;
    }
    .section-feature-row .right{
      width: 100%;
    }
    .right img{
      width: 100%;
      margin-top: 30px;
    }
  }
  @media (max-width: 970px) {
    .image-text__container{
      padding: 50px 30px;
    }
    .image-text__wrapper .text-wrap p{
      font-size: 16px;
      color: #222;
      font-weight: 400;
      line-height: 28px;
    }
    .image-text__container .left{
      margin-right: 0;
    }
  }
  @media (max-width: 768px) {
    .image-text__container{
      padding: 50px 16px;
    }
    .section-feature-row .right img{
      border-radius: 8px;
      padding: 0;
    }
    .right img{
      max-width: 100%;
    }
    .section-feature-row .right img{
      border-radius: 0;
    }
    .image-text__container .right{
      width: 100%;
      padding: 0;
    }
    .image-text__wrapper > .item{
      flex-direction: row;
    }
    .section-feature-row .right{
      width: 100%;
    }
    .image-text__wrapper > .item img{
      margin-right: 16px;
    }
    .image-text__container{
      flex-direction: column;
    }
    .section-feature-row .left{
      width: 100%;
    }

    .image-text__container h2{
      font-size: 24px;
      line-height: 36px;
      margin-bottom: 25px;
    }

    .image-text__wrapper .text-wrap p{
      font-size: 16px;
      line-height: 28px;
    }
  }

  @media screen and (min-width: 320px) and (max-width: 480px){
    .image-text__container .section-label{
      margin-bottom: 8px;
    }

    .image-text__wrapper{
      margin-bottom: 32px;
    }

    .image-text__wrapper:nth-last-child(1){
      margin-bottom: 0;
    }

    .image-text__wrapper > .item{
      column-gap: 16px;
    }

    .image-text__wrapper .text-wrap h3{
      margin: 0;
      margin-bottom: 4px;
      line-height: 22px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "How to use product",
  "settings": [
    {
      "label": "Icon",
      "type": "image_picker",
      "id": "icon"
    }
  ]
}
{% endschema %}