{% liquid
  # Assigns the 'content' variable with the value from product's metafield 'product_manual'
  assign content = product.metafields.description.product_manual.value

  # Retrieves the image associated with the content
  assign content_img = content.image

  # Assigns the desktop version of the manual from the content
  assign manual_d = content.manual_desktop.value

  # Assigns the mobile version of the manual from the content
  assign manual_m = content.manual_mobiles.value
%}

{% comment %} Renders the following HTML only if 'content' is not empty {% endcomment %}
{% unless content == empty %}
<div class="item__wrapper">
<div class="panal">
  <div class="page-width product-section section-text-row">
    <div class="grid">
      <div class="text-row heading">
        <div class="image">
          {% comment %} Displays the content image with a width of 580 pixels {% endcomment %}
          {{ content_img.value | image_url: width: 580 | image_tag }}
        </div>
        <div class="heading-content">
          {% comment %} Displays the heading value from the content {% endcomment %}
          <h2>{{ content.heading.value }}</h2>

          {% comment %} Displays the description from the content as a metafield tag {% endcomment %}
          <p>{{ content.description | metafield_tag }}</p>

          {% comment %} Conditionally displays a popup trigger if either desktop or mobile manual is available {% endcomment %}
          {% if manual_d != blank or manual_m != blank %}
            {% comment %} Data attributes for popup image URLs for desktop and mobile {% endcomment %}
            <div class="popup__trigger"
              data-popupimg="{{ manual_d.src | image_url: width: 1200 }}"
              data-popupimgmobile="{{ manual_m.src | image_url: width: 500 }}"
            >
            {% comment %} Displays button text set in section settings {% endcomment %}
            {{ section.settings.btn_text }}
          </div>
        {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
</div>
{% endunless %}


{% javascript %}

// Adding an event listener to the document for when the DOM is fully loaded
document.addEventListener('DOMContentLoaded', function() {

// Adding a click event listener to the element with class 'close__popup'
document.querySelector('.close__popup').addEventListener('click', function() {
  // Toggles the 'active' class on the element with class 'popup__wrapper'
  // This likely shows or hides the popup
  document.querySelector('.popup__wrapper').classList.toggle('active')

  // Resets the source of the popup image to default (empty string "#")
  document.querySelector('#product_popup .popup__img').src = "#"
})

// Adding a click event listener to the element with class 'popup__trigger'
document.querySelector('.popup__trigger').addEventListener('click', function() {
  // Toggles the 'active' class on the element with class 'popup__wrapper'
  // This likely shows or hides the popup
  const popup = document.querySelector('.popup__wrapper').classList.toggle('active')

  // Checks if the window's width is greater than 768 pixels (probably for desktop)
  if (window.innerWidth > 768) {
    // Sets the source of the popup image for desktop from data attribute 'data-popupimg'
    document.querySelector('#product_popup .popup__img').src = this.dataset.popupimg
  }
  else {
    // Sets the source of the popup image for mobile from data attribute 'data-popupimg'
    document.querySelector('#product_popup .popup__img').src = this.dataset.popupimgmobile
  }
})
})


{% endjavascript %}

